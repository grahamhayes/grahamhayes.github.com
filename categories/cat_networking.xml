&lt;a name="rest_code_180145ad3b4e40fa9d899f3f69ff7c82-14"&gt;&lt;/a&gt;    &lt;span class="nt"&gt;"interfaces"&lt;/span&gt;&lt;span class="p"&gt;:&lt;/span&gt; &lt;span class="p"&gt;{&lt;/span&gt;
&lt;a name="rest_code_180145ad3b4e40fa9d899f3f69ff7c82-15"&gt;&lt;/a&gt;        &lt;span class="nt"&gt;"wireguard"&lt;/span&gt;&lt;span class="p"&gt;:&lt;/span&gt; &lt;span class="p"&gt;{&lt;/span&gt;
